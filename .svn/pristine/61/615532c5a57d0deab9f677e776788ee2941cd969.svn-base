/* 로그인 ******************************/
.page-login {
	position:fixed;
	top:50%;
	left:50%;
	margin-top:-250px;
	margin-left:-130px;
}
.login-left {
	float:left;
	background-color:#5a6972;
	width:40%;
	height:100%;
}
.login-center {
	float:left;
	width:20%;
	height:100%;
	background:url("/images/login_bg.png") no-repeat ;
	background-size:100% 100%;
}
.login-right {
	float:left;
	background-color:#40525c;
	width:40%;
	height:100%;
}
.logo-login {
	width:241px;
	margin:10px auto;
}
.logbox {
	width:260px;
	height:420px;
	padding:35px 30px;
}
h1.ad_title {font-family:'arial'; font-size:28px; font-weight:bold; color:#555; margin-top:17px;}
h3.ad_title1 {font-family:'arial'; font-size:16px; color:#fff;}
h2.ad_title2 {font-family:arial; font-size:18px; color:#fff; text-align:left; letter-spacing:-0.5px; }
h4.ad_title3 {font-family:돋움; font-size:11px; color:#fff; text-align:center; margin:5px 0px 25px 0px; }
.log_form {text-align:left; margin-top:20px;}
.log_form li {margin-top:5px; text-align:center;}
.log_form li input {width:320px;}

/* 메인 페이지 ******************************/
.page-main {
	width:929px;
	height:774px;
	background:url("/images/bg_main.png") no-repeat;
	margin:20px auto;
	border:1px solid #000;
}
.left-board {
	float:left;
	width:560px;
	margin:0;
}
.right-board {
	float:right;
	width:400px;
	margin:0;
}
.left-frame {
	width:420px;
	height:660px;
}
.right-frame {
	width:400px;
	height:660px;
}

/* 리스트 페이지 ******************************/
.contents-list li {
	width:100%;
	height:69px;
	cursor:pointer;
	background:url("/images/bg_row.png") repeat-x;
}
.contents-list li:hover {
	background-position:0 -69px;
}

.contents-info {
	float:left;
}
.contents-title {
	margin:10px 5px 8px 20px;
	font-size:16px;
	font-weight:bold;
}
.contents-title-short {
	margin:10px 5px 8px 20px;
	font-size:16px;
	font-weight:bold;
	width:260px;
}
.contents-user {
	display:inline-block;
	padding:3px;
	margin:0 10px 0 20px;
	color:#fff;
	background-color:#9b7e7e;
	-moz-border-radius:3px;
	-webkit-border-radius:3px;
	-khtml-border-radius:3px;		
	border-radius:3px;
}
.contents-meta {
}
.contents-arrow {
	float:right;
	margin:20px 15px 0 0 ;
}

.bottom-dotted {
	width:100%;
	padding-bottom:10px;
	border-bottom:1px dotted #555;
}
.contents-contents {
	clear:both;
	padding:20px;
	border-bottom:1px dotted #555;
}
.contents-contents img {
	width:100%;
}
.contents-tools {
	margin:20px;
}

.read-more {
	width:100%;
	height:80px;
	padding-top:65px;
	text-align:center;
	background-color:#ccc;
}

/* 작성 페이지 ******************************/
.page-write {
	width:929px;
	height:774px;
	background:url("/images/bg_write.png") no-repeat;
	margin:20px auto;
	border:1px solid #000;
}
.write-form {
	width:640px;
}
