@charset "utf-8";

/* placeholder */
::-webkit-input-placeholder { color:#336992; }
:-moz-placeholder { color:#336992; }/* Firefox 18- */
::-moz-placeholder { color:#336992; }/* Firefox 19+ */
:-ms-input-placeholder { color:#336992; }

a.btn { display:inline-block; border:1px solid #ccc; border-radius:4px; background-color:#fff; }

html { height:100%; }
body { 
	background-color:#eee; 
	margin: 0;
	padding: 0;
	border: 0;
	font-style: normal;
	font-size: 12px;
	font-family: NanumBarunGothic, '맑은 고딕', sans-serif;
	line-height: 1.5;
	color: #000;
	height: 100%;
}
body.white { background-color:#fff; }

input, button, textarea {
    outline: none;
}
button {
    margin: 0;
    padding: 0;
    border: 0;
    line-height: 1;
    background: transparent;
    vertical-align: top;
    cursor: pointer;
}


/* 메인 프레임 */
.wrap { display:table; height:100%; width:100%; }
.frame-left { display:table-cell; height:100%; width:250px; }
.frame-left iframe { height:100%; width:100%; border:0; }
.frame-line { display:table-cell; background-image:url('/images/frame_ver.png'); width:5px; height:100; }
.frame-right { display:table-cell; height:100%; width:calc(100% - 255px); }
.frame-right iframe { height:100%; width:100%; width:100%; border:0; }

/* 상단타이틀바 */
header.titlebar { background-color:#fff; }

/* 상단툴바 */
header.toolbar { padding:6px 8px; height:24px; border-bottom:1px solid #aaa; background-color:#fff; }
header.toolbar .tool-table { display:table; width:100%; height:20px; }
header.toolbar .tool-table .header-left { display:table-cell; vertical-align:middle; }
header.toolbar .tool-table .header-div { display:table-cell; width:1px; background-color:#eee; margin:0 5px; }
header.toolbar .tool-table .header-right { display:table-cell; text-align:right; padding:0 2px; vertical-align:middle; width:32px; }

header.toolbar .tool-table .header-left .search-tool { display:table; }
header.toolbar .tool-table .header-left .search-tool .search-box { display:table-cell; }
header.toolbar .tool-table .header-left .search-tool .search-btn { display:table_cell; }
header.toolbar .tool-table .header-left .search-tool .search-btn button { color:#0096ff; font-size:16px; font-weight:bold; padding:2px 3px; }


header.toolbar .search-box { border-radius:4px; padding:3px; margin-right:3px; }
header.toolbar .search-box.gray { background-color:#eee; }
header.toolbar .search-box .search-icon { padding:3px 0 0 5px; }
header.toolbar .search-box input { background-color:rgba(255,255,255,0); border:0; }

header.toolbar.gray { background-color:#fcfcfc; }
header.toolbar.gray .search-box { border:1px solid #dadada; background-color:#fff; }
header.toolbar.shadow { box-shadow:0 2px 3px #ccc; }

header.titlebar { padding:6px 8px; height:24px; border-bottom:1px solid #aaa; }
header.titlebar .title-table { display:table; width:100%; height:20px; }
header.titlebar .title-table h1 { display:table-cell; font-size:18px; line-height:22px; }
header.titlebar .title-table h1 img { vertical-align:text-bottom; }
header.titlebar .title-table .tools { display:table-cell; text-align:right; padding:0 2px; vertical-align:middle; width:32px; }
header.titlebar .title-table .tools li { display:table-cell; }
header.titlebar.shadow { box-shadow:0 2px 3px #ccc; }


/* 모임 목록 */
table.line { width:100%; }
table.line tr { cursor:pointer; }
table.line tr.hide { display:none; }
table.line td { padding:2px 0 2px 10px; border-bottom:1px solid #ddd; }

.group-thumb-list { width:32px; height:40px; background-position:center; background-repeat:no-repeat; background-size:cover; }
.group-thumb2-list { width:32px; height:40px; background-position:center; background-repeat:no-repeat; background-size:cover; }
.group-add-list { width:28px; height:36px; border:2px dotted #aaa; border-radius:3px; text-align:center; }
.group-add-list img { width:20px; margin-top:6px; }

/* 게시판 리스트 */
.bbs-list li { width:100%; background-color:#fff; margin-top:10px; }
.bbs-list.comment li { background-color:#eee; }
.bbs-list.comment li .bbs { background-color:#eee; border-bottom:1px solid #aaa; padding:20px 0; }
.bbs-list li .bbs { width:480px; margin:0 auto; }
.bbs-list li .bbs .bbs-info { display:table; padding:10px; width:calc(100% - 20px); border-top:1px solid #aaa; }
.bbs-list li .bbs .bbs-info .photo { display:table-cell; width:40px; height:40px; border-radius:20px; }
.bbs-list li .bbs .bbs-info .write-info { display:table-cell; padding-left:10px; }
.bbs-list li .bbs .bbs-info .write-info .user-info { font-size:14px; font-weight:bold; }
.bbs-list li .bbs .bbs-info .write-info .write-time { color:#aaa; }
.bbs-list li .bbs .bbs-contents { margin:0 10px; }
.bbs-list li .bbs .bbs-tool { display:table; width:calc(100% - 20px); margin:10px; border-top:1px solid #ccc; }
.bbs-list li .bbs .bbs-tool .left { display:table-cell; padding:5px 0; }
.bbs-list li .bbs .bbs-tool .right { display:table-cell; text-align:right; padding:5px 0; }
.bbs-list li .bbs .bbs-tool img {  vertical-align: text-bottom; }

.carousel { margin-top:10px; }
.carousel .item { margin: 0px; width:100%; height:150px; background-size:cover; background-position:center; background-repeat:no-repeat; }
.carousel .item img { display: block; width: 100%; height: auto; }

.left-tool { margin:20px 0; text-align:right; width:480px; }

/* 에디터 */
article.editor { height:calc(100% - 47px); width:100%; margin-top:10px; background-color:#fff; }
article.editor form { height:100%; }
.bbs-edit { width:400px; margin:0 auto; height:100%; }
.bbs-edit ul { height:100%; }
.bbs-edit ul .text-input { height:calc(100% - 140px); padding:10px 0; }
.bbs-edit ul .text-input .text-box { height:100%; background:#fafafa; padding:10px; margin-bottom:10px; }
.bbs-edit textarea { height:calc(100% - 10px); width:100%; border:0; background:rgba(255,255,255,0); }
.tool { background-color:#fff; border-top:1px solid #ccc; border-bottom:1px solid #ccc; padding:10px; }
.tool .file-add { display:table; width:32px;}
.tool .file-add .thumb { display:table-cell; vertical-align:top; }
.tool .file-add .thumb .photo-frame { width:32px; height:32px; border:1px solid #aaa; background-size:cover; background-repeat:no-repeat; background-position:center; margin-left:5px; }
.tool .file-add .thumb .photo-frame2 { width:60px; height:60px; border:1px solid #aaa; background-size:cover; background-repeat:no-repeat; background-position:center; margin-left:5px; }
.tool .file-add .add-btn { display:table-cell; vertical-align:top; }
.tool .file-add .add-btn .file { position:relative; width:32px; height:32px; }
.tool .file-add .add-btn .file-btn { position:relative; margin-top:-32px; height:32px; opacity:0; cursor:pointer; }
.tool .file-add .add-btn .file-btn .hidden-submit-btn {width:0px; height:0px;}
.tool .file-add .thumb .photo-frame .cancel-btn { width:15px; height:15px; font-size:10px; background-color:#f00; color:#fff; border:1px solid #fff; border-radius:10px; padding:2px; }


.submit-bar { padding:10px; text-align:center; }
.submit-btn { background-color:#0072ff; color:#fff; border-radius:3px; border:1px solid #0072ff; padding:5px 30px; }
.submit-btn:hover { background-color:#4499ff;  }
.cancel-btn { background-color:#fff; border-radius:3px; border:1px solid #aaa; padding:5px 10px; }
.cancel-btn:hover { background-color:#eee;  }

.group-photo { width:400px; margin:0 auto; padding-top:20px; }
.group-edit { width:400px; margin:0 auto; padding-top:20px; }


footer.comment { position:fixed; bottom:-132px; width:100%; height:160px; }
footer.comment .comment-tab { text-align:right; padding-right:10px; }
footer.comment .comment-board { background-color:#ccc; padding:10px; } 
footer.comment .comment-form { width:480px; margin:0 auto; }
footer.comment .file { margin:0px; }
footer.comment .comment-edit { display:table; margin:5px 0; width:480px; }
footer.comment .comment-edit .left { display:table-cell; vertical-align:top; }
footer.comment .comment-edit .right { display:table-cell; vertical-align:top; }
footer.comment .comment-edit .search-box { border-radius:4px; background-color:#fff; padding:5px; }
footer.comment .comment-edit .search-box textarea { border:0; width:410px; height:45px; } 
footer.comment .comment-edit button { border-radius:4px; background-color:#0096ff; width:30px; height:57px; margin-left:5px; padding:0; } /*  */
footer.comment .comment-edit button span { color:#fff; font-weight:bold; line-height:14px; }
 


#side, #side #menu { height:100%; }
.toggler { width: 500px; height: 200px; position: relative; }
#side-toggle { position:absolute; float:right; top:0px; left:10px; width:44px; height:44px; cursor:pointer; z-index:92000; }
/* #side-toggle { position:fixed; top:12px; left:17px; width:25px; height:25px; cursor:pointer; z-index:92000; } */
#side-toggle IMG { width:100%; }
#side { height: 100%;  position: fixed;  right:-200px; top:0; z-index:90000; overflow:visible; }
#side #menu { width:195px; float:left; font-size:1em; background-color: #fff; color:#333;  }
#side #menu .logo { background-color:#f1f1f1; height:10px; }
#side #menu ul li { padding:8px; border-bottom:1px solid #ccc; }
#side #menu ul li.subtitle { padding:3px 8px; color:#0096ff; }
#side #menu ul li div { display:table; }
#side #menu ul li span { display:table-cell; vertical-align:middle; }
#side #menu ul li span:first-child { width:30px; }
#side #menu ul li:hover { background-color:#fafafa; }
#side #menu ul a { color:#333; }

.group-mem { width:100%; margin-top:20px; }
.group-mem thead { font-weight:bold; margin-left:10px; border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; }
.group-mem thead th { text-align:left; color:#0096FF; padding:4px 10px; }
.group-mem thead th:first-child { border-left: 0; }
.group-mem tbody td { 
	text-align:center; 
	padding:3px; 
	border-bottom: 1px solid #ddd; 
}
.group-mem .userName { text-align:left; }
.group-mem TR.hide { display:none; } 

.tooltab { display:table; width:100%; background-color:#fcfcfc; border-bottom: 1px solid #aaa; }
.tooltab li { display:table-cell; width:50%; text-align:center; padding:10px; }


.sub-head { display:table; width:100%; }
.sub-head .back { display:table-cell; width:30px; vertical-align:middle; }
.sub-head .title { display:table-cell; font-weight:bold; font-size:16px; vertical-align:middle; }
.sub-head .top-tool { display:table-cell; width:30px; vertical-align:middle; }


/* pagelist */
.page-item-count {
	padding:2px 20px;
	text-align:right;
}
.pagelist {
	clear:left;
	margin:10px 20px 20px;
	text-align:center;
}
.pagelist button {
	margin:0;
	padding:0 6px;
	height:32px;
	cursor:pointer;
	vertical-align:top;
	border:1px solid #c4c7d0;
	border-radius:5px;
	background:#f5f5f5;
}
.pagelist button:hover {
	background:#fff;
	border:1px solid #c4c7d0;
}
.pagelist button.pageBtn {
	font-size:13px;
	color:#aaa;
	border:1px solid #f0f2f3;
}
.pagelist button.pageBtnCurrent {
	font-size:13px;
	color:#77f;
	border:1px solid #f0f2f3;
}
.pagelist button.boxBtn {
	background:url("/images/btn_boar.png") repeat-x;
	border:1px solid #c4c7d0;
	width:50px;
}
.pagelist button.boxBtnOff {
	background:url("/images/btn_boar.png") repeat-x;
	border:1px solid #c4c7d0;
	width:50px;
	cursor:default;
}
.photo-detail { width:30px; height:30px; border-radius:50px; background-size:cover; background-repeat:no-repeat; background-position:center; border:1px solid #ccc; background-color:#fff; }