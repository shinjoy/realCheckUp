@CHARSET "UTF-8";

/* TABLE - SIMPLE WHITE */

table.simpleWhite {
	background:#fff;
	border-top:1px solid #bbb;
	border-collapse: collapse;
}
table.simpleWhite thead tr th {
	height:#fff;
	font-weight:bold;
}
table.simpleWhite tr {
	border-bottom:1px solid #ddd;
}
table.simpleWhite tr:last-child {
	border-bottom:1px solid #bbb;
}
table.simpleWhite th,
table.simpleWhite td {
	border-bottom:1px solid #ddd;
	padding:4px;
	color:#777;
}
table.simpleWhite th.center,
table.simpleWhite td.center {
	text-align:center;
}
table.simpleWhite th.left,
table.simpleWhite td.left {
	text-align:left;
}
table.simpleWhite th.right,
table.simpleWhite td.right {
	text-align:right;
}
table.simpleWhite td.nodata {
	height:100px;
}

/* TABLE - NORMAL - LIST */
table.list { 
	clear:both;
	border:1px solid #cfceca;
	border-collapse: collapse;
	width:100%;
	vertical-align:top;
}
table.list thead { 
	width:100%;
	border:1px solid #64737c;
	border-bottom:1px solid #fff;
}
table.list thead tr {
	height:31px
}
table.list thead tr th {
	color:#fff;
	font-weight:bold;
	background-color:#64737c;
}
table.list tbody {
	width:100%;
	border-left:1px solid #cfceca;
	border-right:1px solid #cfceca;
}
table.list tbody tr {
	border-bottom:1px solid #cfceca;
	height:30px;
}
table.list tbody tr td {
	border-bottom:1px solid #cfceca;
	border-right:1px solid #dcdcdc;
	text-align:center;
	padding:3px;
}
table.list tbody tr td.left {
	text-align:left;
}
table.list tbody tr td.right {
	text-align:right;
}
