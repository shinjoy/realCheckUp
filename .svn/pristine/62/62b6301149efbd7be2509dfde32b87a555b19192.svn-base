/* TABLE - SLIM - LIST */
table.slim thead { 
	border:0;
	background:#999;
}
table.slim thead tr {
	height:24px
}
table.slim thead tr th {
	color:#fff;
	font-weight:bold;
}
table.slim tbody tr {
	height:24px;
}



table.setup tr th {border:1px solid #c9c9c9; background-color:#e4e4e4; font-weight:bold; color:#555;}
table.setup tr td {text-align:left; padding-left:30px; height:40px;}
table.setup input.mar {margin:0px 10px 2px 0px}

/* TABLE - INFO BOX */
table.info { 
	clear:both;
	width:100%;
	vertical-align:top;
}
table.info th {
	color:#999;
	text-align:right;
	padding:5px 10px;
	border-bottom:1px solid #ddd;
}
table.info tr:first-child th {
	border-top:1px solid #ddd;
}
table.info td {
	color:#333;
	text-align:left;
	padding:5px 10px;
	border-bottom:1px solid #ddd;
}
table.info tr:first-child td {
	border-top:1px solid #ddd;
}

/* TABLE - EDIT FORM */
table.edit {
	border:0;
	border-collapse: collapse;
	width:100%;
	vertical-align:top;
	margin:10px 50px 10px 10px;
}
table.edit thead {
	border:0;
	width:100%;
}
table.edit thead tr {
	height:40px
}
table.edit thead tr th {
	color:#fff;
	font-weight:bold;
}
table.edit tbody {
	border:0;
	width:100%;
}
table.edit tbody tr {
	border:0;
	height:30px;
}
table.edit tbody tr td {
	border:0;
	text-align:left;
	padding:3px;
}
table.edit tbody tr td:first-child {
	text-align:right
}

